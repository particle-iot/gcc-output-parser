{
  "env": {
    "node": true
  },
  "rules": {
    "block-scoped-var": 2,
    "brace-style": [2, "1tbs"],
    "camelcase": 1,
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "max-depth": [1, 3],
    "max-statements": [1, 30],
    "max-len": [1, 80],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": 1,
    "no-extra-parens": 2,
    "no-underscore-dangle": 0,
    "no-nested-ternary": 2,
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "keyword-spacing": [2],
    "array-bracket-spacing": [2, "never"],
    "space-unary-ops": [2, {"words": true, "nonwords": false}],
    "strict": [2, "global"],
    "valid-jsdoc": 2,
    "func-names": 2
  }
}
